<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <CheckBox
        android:tag="vitamin B"
        android:id="@+id/vitaminA"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:labelFor="@id/nutrient_1"
        app:layout_constraintEnd_toEndOf="@+id/vitaminB"
        app:layout_constraintStart_toStartOf="@+id/vitaminB"
        app:layout_constraintTop_toBottomOf="@+id/vitaminB" />

    <TextView
        android:id="@+id/nutrient_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin A"
        app:layout_constraintBottom_toBottomOf="@+id/vitaminA"
        app:layout_constraintStart_toEndOf="@+id/vitaminA"
        app:layout_constraintTop_toTopOf="@+id/vitaminA" />


    <CheckBox
        android:id="@+id/vitaminB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tag="vitamin B"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/nutrient_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin B"
        app:layout_constraintBottom_toBottomOf="@+id/vitaminB"
        app:layout_constraintStart_toEndOf="@+id/vitaminB"
        app:layout_constraintTop_toTopOf="@+id/vitaminB" />


    <CheckBox
        android:tag="protein"
        android:id="@+id/protein"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/vitaminA"
        app:layout_constraintEnd_toEndOf="@+id/vitaminC"
        app:layout_constraintStart_toStartOf="@+id/vitaminC"
        app:layout_constraintTop_toBottomOf="@+id/vitaminC" />

    <TextView
        android:id="@+id/nutrient_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        app:layout_constraintBottom_toBottomOf="@+id/protein"
        app:layout_constraintStart_toEndOf="@+id/protein"
        app:layout_constraintTop_toTopOf="@+id/protein" />

    <CheckBox
        android:id="@+id/vitaminC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:tag="vitamin C"
        app:layout_constraintBottom_toTopOf="@+id/vitaminA"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/vitaminB"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nutrient_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitamin C"
        app:layout_constraintBottom_toBottomOf="@+id/vitaminC"
        app:layout_constraintStart_toEndOf="@+id/vitaminC"
        app:layout_constraintTop_toTopOf="@+id/vitaminC" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nutrient"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
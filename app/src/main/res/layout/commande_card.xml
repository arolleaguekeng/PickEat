<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:id="@+id/il"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Nom de l'user"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menuphpto"
                android:layout_width="82dp"
                android:layout_height="80dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/fruit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.013" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="97dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:text="Nom du mennu"
                app:layout_constraintStart_toEndOf="@+id/menuphpto"
                app:layout_constraintTop_toTopOf="@+id/menuphpto" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:text="QuantitÃ©:"
                app:layout_constraintStart_toEndOf="@+id/menuphpto"
                app:layout_constraintTop_toTopOf="@+id/menuphpto" />

            <TextView
                android:id="@+id/valeurqte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="valeur"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Statut:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.172" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:layout_marginEnd="32dp"
                android:text="en cour..."
                app:layout_constraintBottom_toBottomOf="@+id/textView19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView19"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/dellete"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="@+id/accept"
                app:layout_constraintEnd_toStartOf="@+id/accept"
                app:layout_constraintTop_toTopOf="@+id/accept" />

            <ImageButton
                android:id="@+id/accept"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_marginStart="136dp"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/valeurqte"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.84" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="8dp"
        android:src="@drawable/takos"
        app:layout_constraintBaseline_toTopOf="@id/il"
        app:layout_constraintEnd_toEndOf="@+id/il"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/il"
        tools:layout_editor_absoluteY="30dp" />


</androidx.cardview.widget.CardView>